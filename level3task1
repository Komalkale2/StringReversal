# Web Scraper Example using BeautifulSoup

import requests
from bs4 import BeautifulSoup

def scrape_news(url):
    try:
        response = requests.get(url)
        response.raise_for_status()  # Check if the request was successful

        # Parse HTML content
        soup = BeautifulSoup(response.text, 'html.parser')

        # Extract article titles and links
        articles = soup.find_all('a')  # Finds all anchor tags
        print(f"\nArticles found on {url}:\n")

        count = 0
        for article in articles:
            title = article.get_text().strip()
            link = article.get('href')

            # Only display valid links with text
            if title and link:
                print(f"{count+1}. {title}")
                print(f"   Link: {link}\n")
                count += 1

        if count == 0:
            print("No articles found!")

    except requests.exceptions.RequestException as e:
        print(f"‚ùå An error occurred: {e}")


# --- Main Program ---
website_url = input("Enter the website URL to scrape: ")
scrape_news(website_url)
