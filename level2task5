# File Word Count Program

def count_words_in_file(filename):
    try:
        with open(filename, 'r') as file:
            text = file.read().lower()  # Convert to lowercase for uniform counting

        # Remove punctuation for accurate word count
        for char in ",.!?;:\"'()[]{}":
            text = text.replace(char, "")

        words = text.split()
        word_count = {}

        for word in words:
            word_count[word] = word_count.get(word, 0) + 1

        # Display words in alphabetical order
        print("\nWord Count (Alphabetical Order):")
        for word in sorted(word_count):
            print(f"{word}: {word_count[word]}")

    except FileNotFoundError:
        print(f"❌ File '{filename}' not found!")
    except Exception as e:
        print(f"⚠️ An error occurred: {e}")


# --- Main Program ---
file_name = input("Enter the filename (with extension): ")
count_words_in_file(file_name)
