# Number Guesser Program

import random

def number_guesser():
    print("🎲 Welcome to the Number Guesser Game!")

    try:
        # User chooses the range
        lower = int(input("Enter the lower limit: "))
        upper = int(input("Enter the upper limit: "))

        if lower >= upper:
            print("⚠️ Invalid range! Upper limit must be greater than lower limit.")
            return

        # Generate random number in range
        secret_number = random.randint(lower, upper)
        attempts = 0

        print(f"\nI have chosen a number between {lower} and {upper}. Try to guess it!")

        while True:
            try:
                guess = int(input("Your guess: "))
                attempts += 1

                if guess < lower or guess > upper:
                    print(f"❌ Please enter a number within {lower}-{upper}.")
                elif guess < secret_number:
                    print("📉 Too low! Try a higher number.")
                elif guess > secret_number:
                    print("📈 Too high! Try a lower number.")
                else:
                    print(f"🎉 Correct! You guessed the number in {attempts} attempts!")
                    break
            except ValueError:
                print("⚠️ Invalid input! Please enter a number.")
    except ValueError:
        print("⚠️ Please enter valid numeric limits.")


# --- Run the Game ---
number_guesser()
